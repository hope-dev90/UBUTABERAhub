<script>
var widgetId1;
var widgetId2;

var onloadCallback = function() {
    
    widgetId1 = grecaptcha.render('captcha-signin', {
        'sitekey' : '6LfCKUQsAAAAAELVBQAi8wgyLzXTo4Z3JKVA3VRU',
        'theme' : 'light'
    });

    
    widgetId2 = grecaptcha.render('captcha-signup', {
        'sitekey' : '6LfCKUQsAAAAAELVBQAi8wgyLzXTo4Z3JKVA3VRU',
        'theme' : 'light'
    });
};

const roles = document.querySelectorAll('.role');
const tabSignin = document.getElementById('tab-signin');
const tabSignup = document.getElementById('tab-signup');
const signInForm = document.getElementById('signInForm');
const signUpForm = document.getElementById('signUpForm');


tabSignin.addEventListener('click', () => {
    tabSignin.classList.add('active');
    tabSignup.classList.remove('active');
    signInForm.style.display = 'block';
    signUpForm.style.display = 'none';
});

tabSignup.addEventListener('click', () => {
    tabSignup.classList.add('active');
    tabSignin.classList.remove('active');
    signUpForm.style.display = 'block';
    signInForm.style.display = 'none';
});
roles.forEach(role => {
    role.addEventListener('click', () => {
        roles.forEach(r => r.classList.remove('active'));
        role.classList.add('active');
        
        const roleName = role.querySelector('h4').innerText;

        document.querySelectorAll('.login-staff, .signup-staff').forEach(el => el.style.display = 'none');

    
        if (roleName === 'Citizen') {
            document.getElementById('login-citizen').style.display = 'flex';
            document.getElementById('signup-citizen').style.display = 'flex';
        } else if (roleName === 'Lawyer') {
            document.getElementById('login-lawyer').style.display = 'flex';
            document.getElementById('signup-lawyer').style.display = 'flex';
        } else if (roleName === 'Judge') {
            document.getElementById('login-judge').style.display = 'flex';
            document.getElementById('signup-judge').style.display = 'flex';
        } else if (roleName === 'Court Clerk') {
            document.getElementById('login-clerk').style.display = 'flex';
            document.getElementById('signup-clerk').style.display = 'flex';
        }

        
        updateRequiredFields(roleName);
    });
});

function updateRequiredFields(activeRole) {

    document.querySelectorAll('.login-staff input, .signup-staff input').forEach(input => {
        input.required = false;
    });

    const activeSections = document.querySelectorAll(`[id*="${activeRole.toLowerCase()}"] input`);
    activeSections.forEach(input => {
        input.required = true;
    });
}

document.getElementById('signInForm').addEventListener('submit', function(e) {
    if (grecaptcha.getResponse(widgetId1) === "") {
        e.preventDefault();
        alert("Please confirm you are not a robot for Sign In");
    }
});

document.getElementById('signUpForm').addEventListener('submit', function(e) {
    if (grecaptcha.getResponse(widgetId2) === "") {
        e.preventDefault();
        alert("Please confirm you are not a robot for Sign Up");
    }
});
</script>
    
